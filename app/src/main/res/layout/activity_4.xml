<?xml version="1.0" encoding="utf-8"?>

<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:mask="http://schemas.android.com/apk/res-auto"
    xmlns:app="http://schemas.android.com/tools"
    app:ignore="NamespaceTypo"
    android:fontFamily="@font/my_font"
    android:background="@color/back">
    <TextView
        android:fontFamily="@font/my_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Осталость 3 из 6 вопросов"
        android:layout_gravity="top|center"
        android:textColor="#222222"
        android:layout_marginTop="54dp"
        android:textSize="24dp"
        android:textStyle="bold"
        />
    <TextView
        android:fontFamily="@font/my_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="top|center"
        android:layout_marginTop="87dp"
        android:textSize="19dp"
        android:text="Завершите опрос"/>

    <TextView
        android:fontFamily="@font/my_font"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text = "Какое у тебя гражданство?"
        android:textColor = "@color/allbalck"
        android:textStyle="bold"
        android:textSize="20dp"
        android:layout_gravity="center"
        android:layout_marginTop="-64dp"/>
    <RelativeLayout
        android:layout_marginTop="50dp"
        android:layout_gravity="center"
        android:layout_width="270dp"
        android:layout_height="162dp">

        <Button
            android:id="@+id/rf"
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:background="@drawable/russ"
            android:fontFamily="@font/my_font"
            android:text="РФ"
            android:textColor="@color/grey"
            android:textSize="18dp" />

        <Button
            android:id="@+id/drug"
            android:layout_width="126dp"
            android:layout_height="50dp"
            android:layout_marginLeft="144dp"
            android:background="@drawable/russ"
            android:fontFamily="@font/my_font"
            android:text="Другое"
            android:textColor="@color/grey"
            android:textSize="18dp" />

        <EditText
            android:id="@+id/neRus"
            android:layout_width="270dp"
            android:layout_height="50dp"
            android:layout_marginTop="73dp"
            android:background="@drawable/renctangle"
            android:fontFamily="@font/my_font"
            android:hint="Укажите гражданство"
            android:paddingLeft="16dp"
            android:textColor="@color/grey"
            android:textColorHint="@color/grey"
            android:textSize="18dp" />

    </RelativeLayout>


    <Button

        android:id="@+id/next4"
        android:fontFamily="@font/my_font"
        android:layout_width="174dp"
        android:layout_height="43dp"
        android:text="Далее"
        android:textColor="#FFFFFF"
        android:textStyle="normal"
        android:background="@drawable/nex"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_marginBottom="78dp"/>



    
    



</FrameLayout>