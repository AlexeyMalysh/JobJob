<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".info_about_job"
    android:background="#E5E5E5">

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/back"
        android:layout_marginTop="105dp"
        android:layout_marginLeft="25dp"
        android:layout_marginRight="25dp"
        android:layout_marginBottom="27dp">

        <ImageView
            android:id="@+id/image_company"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="21dp"
            android:layout_marginRight="19dp"
            android:layout_marginBottom="501dp" />

        <TextView
            android:id="@+id/companyName"
            android:fontFamily="@font/my_font"
            android:textSize="12dp"
            android:textColor="#C4C4C4"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="178dp"
            android:layout_marginRight="227dp"
            android:layout_marginBottom="471dp"/>
        <TextView
            android:id="@+id/vacancyName"
            android:fontFamily="@font/my_font"
            android:textSize="16dp"
            android:textColor="#222222"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="19dp"
            android:layout_marginTop="204dp"
            android:layout_marginRight="227dp"
            android:textStyle="bold"
            android:layout_marginBottom="450dp"/>

        <TextView
            android:id="@+id/job_time_info"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="30dp"
            android:layout_marginTop="211dp"
            android:layout_marginRight="141dp"
            android:layout_marginBottom="398dp"
            android:background="@drawable/timejob"
            android:fontFamily="@font/my_font"
            android:paddingLeft="12dp"
            android:textColor="#FFA400"
            android:textSize="12dp" />

        <TextView
            android:id="@+id/job_sale_info"
            android:fontFamily="@font/my_font"
            android:layout_width="97dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="398dp"
            android:layout_marginTop="201dp"
            android:layout_marginLeft="181dp"
            android:layout_marginRight="32dp"
            android:background="@drawable/sale"
            android:text="100 000"
            android:textColor="#00C2AD"
            android:textSize="11dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="12dp"
            />
        <Button
            android:id="@+id/go_off"
            android:layout_width="56dp"
            android:layout_height="56dp"
            android:background="@drawable/go_offer"
            android:layout_marginTop="179dp"
            android:layout_marginRight="19dp"
            android:layout_marginLeft="275dp"/>



    </FrameLayout>





</FrameLayout>