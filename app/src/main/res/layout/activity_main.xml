<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:scrolling_image_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity"
    android:background="#F3F4F9"
    >







    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:ignore="MissingConstraints"

        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="0dp">

        <com.q42.android.scrollingimageview.ScrollingImageView

            android:id="@+id/scrolling_background"
            android:layout_width="match_parent"
            android:layout_height="67.29dp"
            android:layout_gravity="top"
            android:layout_marginTop="170dp"
            android:scaleY="2.2"
            android:scaleX="2.0"

            app:source="@drawable/animation2"
            app:speed="-15dp" />
        <com.q42.android.scrollingimageview.ScrollingImageView

            android:id="@+id/scrolling_background1"
            android:layout_width="match_parent"
            android:layout_height="67.29dp"
            android:layout_gravity="top"
            android:layout_marginTop="60dp"
            android:scaleY="4.0"
            android:scaleX="4.0"

            app:source="@drawable/animatio1"
            app:speed="7.5dp" />

        <com.q42.android.scrollingimageview.ScrollingImageView

            android:id="@+id/scrolling_background2"
            android:layout_width="match_parent"
            android:layout_height="67.29dp"
            android:layout_gravity="top"
            android:layout_marginTop="305dp"
            android:scaleY="2.2"
            android:scaleX="2.0"

            app:source="@drawable/animation3"
            app:speed="15dp" />
        <com.q42.android.scrollingimageview.ScrollingImageView

            android:id="@+id/scrolling_background3"
            android:layout_width="match_parent"
            android:layout_height="67.29dp"
            android:layout_gravity="top"
            android:layout_marginTop="435dp"
            android:scaleY="2.2"
            android:scaleX="2.0"

            app:source="@drawable/animation4"
            app:speed="-15dp" />
        <com.q42.android.scrollingimageview.ScrollingImageView

            android:id="@+id/scrolling_background4"
            android:layout_width="match_parent"
            android:layout_height="67.29dp"
            android:layout_gravity="top"
            android:layout_marginTop="565dp"
            android:scaleY="2.2"
            android:scaleX="2.0"

            app:source="@drawable/animation2"
            app:speed="15dp" />

        <com.q42.android.scrollingimageview.ScrollingImageView

            android:id="@+id/scrolling_background5"
            android:layout_width="match_parent"
            android:layout_height="67.29dp"
            android:layout_gravity="top"
            android:layout_marginTop="695dp"
            android:scaleY="2.2"
            android:scaleX="2.0"

            app:source="@drawable/animation2"
            app:speed="-15dp" />


        <TextView
            android:layout_width="156dp"
            android:layout_height="146.8dp"
            android:foreground="@drawable/screensave"

            android:layout_gravity="center_horizontal"
            android:layout_marginTop="69.1dp"
           />
    </FrameLayout>

</RelativeLayout>