<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_gravity="center_horizontal">

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="372dp"
        tools:ignore="MissingConstraints"
        android:layout_marginTop="20dp"
        android:layout_gravity="center_horizontal|top"
        android:background="@drawable/rectangle9"
        >
        <ImageView
            android:id="@+id/image_job"
            android:layout_width="280dp"
            android:layout_marginLeft="19dp"
            android:layout_marginRight="19dp"
            android:layout_height="122dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="21dp"/>

        <TextView
            android:id="@+id/company"
            android:fontFamily="@font/my_font"
            android:layout_width="24dp"
            android:layout_height="15dp"
            android:text="KFC"
            android:textSize="12dp"
            android:layout_marginTop="158dp"
            android:layout_marginLeft="19dp"
            android:textColor="@color/grey"/>
        <TextView
            android:id="@+id/vacancy"
            android:fontFamily="@font/my_font"
            android:textStyle="bold"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Курьер"
            android:textSize="16dp"
            android:layout_marginTop="174dp"
            android:layout_marginLeft="19dp"
            android:textColor="#222222"/>

        <TextView
            android:text="После регистрации и ввода всех данных, пользователь попадает на страницу впцупцупцупцупцупцупцуп..."
            android:id="@+id/info_job"
            android:layout_width="232dp"
            android:layout_height="45dp"
            android:layout_marginTop="204dp"
            android:layout_marginLeft="19dp"
            android:textSize="12dp"
            android:textColor="@color/grey"
            android:fontFamily="@font/my_font"/>

        <Button
            android:id="@+id/watch_vacancy"
            android:layout_width="36dp"
            android:layout_height="36dp"
            android:layout_marginLeft="305dp"
            android:layout_marginRight="25dp"
            android:layout_marginTop="159dp"
            android:background="@drawable/click" />

        <TextView
            android:id="@+id/job_time"
            android:layout_width="109dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginLeft="19dp"
            android:layout_marginBottom="21dp"
            android:background="@drawable/timejob"
            android:fontFamily="@font/my_font"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="12dp"
            android:text="Частичная"
            android:textColor="#FFA400"
            android:textSize="11dp" />

        <TextView
            android:id="@+id/job_sale"
            android:fontFamily="@font/my_font"
            android:layout_width="97dp"
            android:layout_height="35dp"
            android:layout_gravity="bottom"
            android:layout_marginBottom="21dp"
            android:layout_marginLeft="255dp"
            android:background="@drawable/sale"
            android:text="100 000"
            android:textColor="#00C2AD"
            android:textSize="11dp"
            android:gravity="center_horizontal|center_vertical"
            android:paddingLeft="12dp"
            />





    </FrameLayout>


</FrameLayout>